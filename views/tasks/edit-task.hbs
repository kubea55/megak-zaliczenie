<form method="POST" action="/task/update/{{task.id}}?_method=PUT">
    <label for="">
        Task name:
        <br>
        <input type="text"
               name="task"
               minlength="3"
               maxlength="300"
               required value="{{task.task}}">
        <br>
    </label>
    <label>
        Select priority:
        <br>
        <select name="priority" id="">
            <option value="{{task.priority}}">{{task.priority}}</option>
            {{#each priority}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>
    <br>
    <label>
        Select status:
        <br>
        <select name="status" id="">
            <option value="{{task.status}}">{{task.status}}</option>

            {{#each status}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>
    <br>
    <button type="submit">Update</button>

</form>

{{> go-to-all-tasks}}